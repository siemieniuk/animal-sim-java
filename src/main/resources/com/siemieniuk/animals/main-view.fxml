<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.siemieniuk.animals.controllers.MainController">
   <center>
      <Canvas fx:id="canvas" height="400.0" onMouseClicked="#showInformationWindow" width="400.0" BorderPane.alignment="CENTER" />
   </center>
   <right>
      <VBox prefHeight="400.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <Label prefHeight="70.0" prefWidth="180.0" text="Hunt Or Be Hunted" textAlignment="CENTER" wrapText="true">
            <font>
               <Font size="26.0" />
            </font>
         </Label>
         <Button mnemonicParsing="false" onAction="#createPrey" prefHeight="24.0" prefWidth="210.0" text="Create Prey" />
         <Button mnemonicParsing="false" onAction="#createPredator" prefHeight="24.0" prefWidth="222.0" text="Create Predator" />
      </VBox>
   </right>
</BorderPane>
